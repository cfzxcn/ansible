global
  maxconn  2000
  ulimit-n  16384
  log  127.0.0.1 local0 err
  stats timeout 30s
 
defaults
  log global
  mode  http
  option  httplog
  timeout connect 5000
  timeout client  50000
  timeout server  50000
  timeout http-request 15s
  timeout http-keep-alive 15s
 
# haproxy监控页

listen stats
  bind *:1080
#  bind 0.0.0.0:1080
#  bind cfvip:1080
  mode http
  option  httplog
  stats enable
  stats uri /
  stats realm k8s\ Haproxy
#  stats auth admin:cf
  stats  refresh 10s
  stats  show-node
  stats  show-legends
#  stats  hide-version

frontend k8s-master
  bind 0.0.0.0:8443
  bind 127.0.0.1:8443
  mode tcp
  option tcplog
  tcp-request inspect-delay 5s
  default_backend k8s-master
 
backend k8s-master
  mode tcp
  option tcplog
  option tcp-check
  balance roundrobin
  default-server inter 10s downinter 5s rise 2 fall 2 slowstart 60s maxconn 250 maxqueue 256 weight 100
  server c1    192.168.1.61:6443 check
  server c4    192.168.1.64:6443 check
  server c6    192.168.1.66:6443 check

