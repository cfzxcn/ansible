! Configuration File for keepalived

global_defs {
    router_id LVS_DEVEL
}
vrrp_script chk_apiserver {
    script "/etc/keepalived/check_apiserver.sh"
    interval 5 
    weight -5
    fall 2
    rise 1
}
vrrp_instance VI_1 {
    state {{ keepState }}
    interface ens33
    mcast_src_ip {{ ansible_default_ipv4.address }}
    virtual_router_id 200
    priority {{ keepPriority }}
    nopreempt
    advert_int 2
    authentication {
        auth_type PASS
        auth_pass K8SHA_KA_AUTH
    }
    virtual_ipaddress {
        192.168.1.200
    }
    track_script {
      chk_apiserver 
} }
